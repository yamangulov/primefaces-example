<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="company_contact_person" author="yamangulov">
        <createTable tableName="company_contact_person">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="company_contact_person_pkey"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="second_name" type="VARCHAR(255)"/>
            <column name="surname" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="telegram" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>